@model IEnumerable<mockingbird.Models.MockApiHttpData>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mock api endpoints</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Path)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Verb)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ResponseStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ResponseDelay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApiStatus)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Path)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Verb)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResponseStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResponseDelay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApiStatus)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
